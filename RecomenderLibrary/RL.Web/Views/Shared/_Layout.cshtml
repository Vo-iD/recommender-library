<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Social bookwork</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Social bookwork", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("My favorite books", "GetMyFavoriteBooks", "Book")</li>
                <li>@Html.ActionLink("Give me some recommendations", "GetMyRecommendations", "Recommendation")</li>
            </ul>

            @using (Html.BeginForm("Search", "Home", FormMethod.Get, new {@class = "navbar-form navbar-left", role = "search"}))
            {
                <div class="form-group">
                    <input type="text" class="form-control" name="term" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Get me info!</button>
            }

            @Html.Partial("_LoginPartial")
        </div>
    </div>
</nav>

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Social bookwork inc.</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
